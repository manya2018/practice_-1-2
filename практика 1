#include <iostream>
int main()
{
    system("chcp 65001");
    using namespace std;
    int chislo,n;
    cout <<" Введите число"<< endl;
    cin >> chislo;
    n=chislo%10;
    switch(n){
        case 1:
            cout<< " яблоко " << endl;
            break;
        case 4:
            cout<< " яблоко " << endl;
            break;
        default:
            cout <<" яблок "<< endl;
            break;
    }


                                               
                                               
